<div class="container-sm shadow-sm rounded bg-body-tertiary mt-3">
    <div class="text-center pt-3">
        <h2>Edit your Set: {{set.name}}</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form action="/set/info/{{set._id}}/edit" method="POST" enctype="multipart/form-data"> {{!-- !!! --}}

            <div class="form-group mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" value="{{set.name}}"/>
            </div>
 
            <div class="form-group mb-3">
                <label class="form-label" for="parts">Parts</label>
                <select name="parts" class="form-multi-select form-control" multiple data-coreui-search="true"> 
                    {{#each parts}}
                    <option value="{{_id}}">{{name}}, {{color}}</option>
                    {{/each}}
                </select>
            </div>
 
            <div class="form-group mb-3">
                <img src="{{set.imgUrl}}" alt="set image" class="rounded-circle" style="height: 50px; width: 50px;">
                <label class="form-label">Image</label>
                <input type="file" name="set-image" class="form-control-file"/>
                <input type="text" name="existingImage" hidden value="{{set.imgUrl}}">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">Instructions</span>
                <input type="text" class="form-control" aria-label="With textarea" name="instructions" value="{{set.instructions}}"></input>
            </div>


            <input type="hidden" value="{{userInSession._id}}" name="creators">
 
            <button type="submit" class="btn btn-danger mb-3">Edit set</button>
    </form>
  </div>
</div>
</div>